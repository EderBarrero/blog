<div class="flex justify-center my-16">
  <!-- Cuadro con borde y sombra -->
  <div class="w-full max-w-lg bg-white p-8 rounded-lg shadow-2xl border border-gray-300 ">
    <div class="text-center mb-8">
      <h2>Edit <%= resource_name.to_s.humanize %></h2>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="flex flex-col mb-6"">
        <%= f.label :email, class: "text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "rounded-full text-center border-gray-300 focus:ring-indigo-500 focus:border-indigo-500 px-4 py-2 mt-2"  %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="flex flex-col mb-6"">
        <%= f.label :current_password, class: "text-sm font-medium text-gray-700" %>
        <%= f.password_field :current_password, class: "rounded-full text-center border-gray-300 focus:ring-indigo-500 focus:border-indigo-500 px-4 py-2 mt-2"  %>
      </div>

      <div class="flex flex-col mb-6"">
        <%= f.label :password, class: "text-sm font-medium text-gray-700" %> 
        <%= f.password_field :password, autocomplete: "new-password", class: "rounded-full text-center border-gray-300 focus:ring-indigo-500 focus:border-indigo-500 px-4 py-2 mt-2" %>
      </div>

      <div class="flex flex-col mb-6"">
        <%= f.label :password_confirmation, class: "text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded-full text-center border-gray-300 focus:ring-indigo-500 focus:border-indigo-500 px-4 py-2 mt-2"  %>
      </div>

      <div class="flex flex-col mt-8 px-32">
        <button type="submit" class="w-full= rounded-full bg-indigo-600 py-3 text-sm font-semibold text-white hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-opacity-50">
          Update
        </button>
      </div>
    <% end %>

      <div class="text-center">
        <p class="text-sm font-medium text-gray-700">Or</p>
        <h3>Delete my account</h3>
        <p>If you wish to delete your account, please click the button below.</p>
        <div class="flex flex-row justify-center gap-8 mt-8">
          <%= button_to "Back", root_path, method: :get, class: "bg-gray-100 px-4 py-2 rounded-full hover:bg-gray-200" %>
          <%= button_to "Delete account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "px-4 rounded-full bg-red-600 py-3 text-sm font-semibold text-white hover:bg-red-500 focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-opacity-50" %>
        </div> 
      </div> 

      <div class="flex flex-col mt-16 px-32">
        
      </div>
    
  </div>
</div>