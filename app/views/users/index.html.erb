<div class="text-center pt-8">
  <p class="text-4xl p-8  text-gray-800">Users Management</p>
</div>

<%= render partial: 'users/form_pdf' %>

<div class="mb-16 mx-auto">
  <!-- Cuadro con borde y sombra -->
  <div class="w-full bg-white p-8 rounded-lg shadow-2xl border border-gray-300 ">

    <div>
      <div style="padding-left: 20%; padding-right:5%;" class="relative overflow-x-auto shadow-lg sm:rounded-lg">
      <table class="w-full text-left rtl:text-right text-gray-500 dark:text-gray-400">
          <thead class="text-base text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
              <tr>
                <th scope="col" class="px-6 py-3">Name</th>
                <th scope="col" class="px-6 py-3">Email</th>
                <th scope="col" class="px-6 py-3">Role</th>
                <th scope="col" class="px-6 py-3">Actions</th>
              </tr>
          </thead>
        <tbody>
            <% @users.each do |u| %>
            <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700">
              <td class="px-6 py-4">
                <%= u.first_name + " " + u.last_name %>
              </td>
              <td class="px-6 py-4">
                <%= u.email %>
              </td>
              <td class="px-6 py-4">
                <%= u.role %>
              </td>
              <th scope="row" class="px-6 py-4">
                <a href="<%= edit_user_path(u.id.to_i) %>">Edit</a>
              </th>
            </tr>
            <% end %>
          </tbody>
      </table>
    </div>
    </div>
  <%= render partial: 'shared/pagination' %>

  </div>
</div>