<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col mb-6">
    <%= form.label :title, style: "display: block", class: "text-sm font-medium text-gray-700" %>
    <%= form.text_field :title, class: "rounded-full text-center text-sm border-gray-300 focus:ring-indigo-500 focus:border-indigo-500 px-4 py-2 mt-2" %>
  </div>

  <div class="flex flex-col mb-6">
    <%= form.label :body, style: "display: block", class: "text-sm font-medium text-gray-700" %>
    <%= form.text_area :body, class: "rounded-full text-center text-sm border-gray-300 focus:ring-indigo-500 focus:border-indigo-500 px-4 py-2 mt-2" %>
  </div>

  <div class="flex flex-col">
      <%= form.label :schedule_for, style: "display: block", class: "text-sm font-medium text-gray-700" %>
      <%= form.datetime_field :published_at, min: Date.tomorrow, class: 'rounded-full text-center text-sm border-gray-300 focus:ring-indigo-500 focus:border-indigo-500 px-4 py-2 mt-2'%>
  </div>

    <div class="flex flex-row justify-center mt-8">
      <button type="submit" class="px-16 rounded-full bg-indigo-600 py-2.5 text-sm font-semibold text-white hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-opacity-50">
        <%= action_name == 'new' ? 'Create Post' : 'Update post' %> 
      </button>
    </div>
<% end %>
