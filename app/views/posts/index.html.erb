<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
  
  <% if post.draft? %>
    <div class="p-2 rounded-full bg-gray-100 text-gray-900 w-24"> Draft </div>
  <% elsif post.scheduled? %>
    <div class="p-2 rounded-full bg-blue-100 text-blue-900 w-24"> Scheduled </div>
  <% end %>
  
    <h2>
      <%= link_to "#{post.title}", post %>
    </h2>
    <p>
      <%= post.author %>
    </p>
    <br>
    <br>
  <% end %>
</div>

<div>
  <% if user_signed_in? %>  
    <%= button_to "New post", new_post_path, method: :get, class: "bg-gray-100 px-4 py-2 rounded-full hover:bg-gray-200" %>
  <% end %>
</div>