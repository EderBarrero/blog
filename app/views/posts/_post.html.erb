

<div id="<%= dom_id post %>"> 

  <div>
    <p class="font-bold m-0">
      By <%= "#{post.user.first_name} #{post.user.last_name} "%>
    </p>
    <p class="text-xs flex flex-row m-0">
      <%= post.published_at ? post.published_at.strftime('%Y-%m-%d %H:%M') : 'not published yet' %>
    </p>
  </div>

<div class="flex justify-center prose mx-auto py-4">
  <!-- Cuadro con borde y sombra -->
  <div class="w-full max-w-lg bg-white p-8 rounded-lg shadow-sm border border-gray-300 ">

      <p class="text-sm">
        <%= post.title %>
      </p>

      <p class="text-sm m-0">
        <%= post.body %>
      </p>

    </div>
  </div>
</div>